{% extends 'base.html.twig' %}
{% block titre %}
    Class list
{%endblock%}

{% block test %}
    <h1>Classe index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Idclasse</th>
                <th>Nomclasse</th>
                <th>Nbr</th>
                <th>Niveau</th>
                <th>actions</th>
                <th></th>

                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for classe in classes %}
            <tr>
                <td>{{ classe.idclasse }}</td>
                <td>{{ classe.nomclasse }}</td>
                <td>{{ classe.nbr }}</td>
                <td>{{ classe.niveau }}</td>
                <td>
                    <a href="{{ path('classe_edit', {'idclasse': classe.idclasse}) }}"class="btn btn-primary ">edit</a>


                </td>
                <td>
                    {{ include('classe/_delete_form.html.twig') }}


                </td>
                <td>
                    <a href="{{ path('classe_show', {'idclasse': classe.idclasse}) }}" class="btn btn-dark" >show</a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classe_new') }}"class="btn btn-info">Create new</a>
{% endblock %}
